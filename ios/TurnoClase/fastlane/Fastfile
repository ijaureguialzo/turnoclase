# If you want to automatically update fastlane if a new version is available:
# update_fastlane

# This is the minimum version number required.
# Update this, if you use features of a newer version
fastlane_version "2.64.1"

default_platform :ios

platform :ios do

  desc "Crear y subir capturas"
  lane :capturas do
    snapshot(skip_open_summary: true)
    frameit
    deliver(force: true,
      skip_binary_upload:true
      )
  end

  desc "Subir una nueva versi√≥n a la App Store"
  lane :publicar do
    get_certificates(output_path:"../../private/ios/certificados/")
    get_provisioning_profile(output_path:"../../private/ios/certificados/")
    
    gym(scheme: "TurnoClase",
      workspace: "../TurnoClase.xcworkspace",
      include_bitcode: true)
    deliver(force: true,
      skip_screenshots:true)
  end

end


