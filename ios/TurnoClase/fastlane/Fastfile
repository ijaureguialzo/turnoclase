# Customize this file, documentation can be found here:
# https://docs.fastlane.tools/actions/
# All available actions: https://docs.fastlane.tools/actions
# can also be listed using the `fastlane actions` command

# Change the syntax highlighting to Ruby
# All lines starting with a # are ignored when running `fastlane`

# If you want to automatically update fastlane if a new version is available:
# update_fastlane

# This is the minimum version number required.
# Update this, if you use features of a newer version
fastlane_version "2.64.1"

default_platform :ios

app = "TurnoClase"

platform :ios do

  desc "Crear y subir capturas"
  lane :capturas do

    if prompt(text: "Modo prueba (sólo un iPhone Xs) (s|n): ").downcase == "s"
      dispositivos = ["iPhone Xs"]
    else
      dispositivos = [
          "iPhone 5s",
          "iPhone 8",
          "iPhone 8 Plus",
          "iPhone Xs",
          "iPhone Xs Max",
          "iPad Pro (12.9-inch) (3rd generation)",
      ]
    end

    if prompt(text: "Localizado (s|n): ").downcase == "s"
      idiomas = ["en-US", "es-ES"]
    else
      idiomas = ["en-US"]
    end

    subir_appstore = prompt(text: "Subirlas a la App Store (s|n): ").downcase == "s"

    snapshot(
        skip_open_summary: true,
        devices: dispositivos,
        languages: idiomas,
        scheme: app,
        output_directory: "./fastlane/screenshots/",
        clear_previous_screenshots: true,
        workspace: "../TurnoClase.xcworkspace"
    )

    frame_screenshots

    if subir_appstore
      deliver(
          force: true,
          skip_binary_upload: true,
          skip_screenshots: false
      )
    end
  end

  desc "Subir una nueva versión a la App Store"
  lane :publicar do
    match(type: "appstore")
    gym(
        scheme: app,
        workspace: "../TurnoClase.xcworkspace",
        include_bitcode: true)
    deliver(
        force: true,
        automatic_release: true,
        skip_screenshots: true)
  end

end


# More information about multiple platforms in fastlane: https://docs.fastlane.tools/advanced/#control-configuration-by-lane-and-by-platform
# All available actions: https://docs.fastlane.tools/actions

# fastlane reports which actions are used. No personal data is recorded.
